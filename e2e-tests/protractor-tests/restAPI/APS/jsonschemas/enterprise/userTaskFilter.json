{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "userTaskFilter.json",
  "title": "User task filter details",
  "description": "User task filter schema",
  "type": "object",
  "properties": {
    "id": {
      "description": "user task filter id",
      "type": "integer",
      "minimum": 1
    },
    "name": {
      "description":"user task filter name",
      "type": "string",
      "pattern": "^[a-zA-Z0-9]+"
    },
    "appId": {
      "type": ["integer", "null"],
      "minimum": 0
    },
    "recent": {
      "type": "boolean"
    },
    "icon": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9]+"
    },
    "filter": {
      "$ref": "taskFilter.json"
    }
  },
  "additionalProperties": false
}