{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "$id":"lightUser.json",
  "title":"light user data",
  "description":"light user schema",
  "type":"object",
  "properties": {
    "id": {
      "description": "user id",
      "type": "integer",
      "minimum": 1
    },
    "firstName": {
      "type": ["string", "null"],
      "pattern": "^[a-zA-z0-9]+"
    },
    "lastName": {
      "type": "string",
      "pattern": "^[a-zA-z0-9]+"
    },
    "email": {
      "type": "string",
      "minLength": 4,
      "format": "email"
    }
  },
  "additionalProperties":false
}