{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "light-app.json",
  "title": "Light App definition details",
  "description": "Light App definition details schema",
  "type": "object",
  "properties": {
    "description": {
      "type": "string",
      "title": "The Description Schema ",
      "minLength": 1
    },
    "icon": {
      "type": "string",
      "title": "The Icon Schema ",
      "minLength": 1
    },
    "id": {
      "type": "integer",
      "title": "The Id Schema ",
      "pattern": "[0-9]+"
    },
    "name": {
      "type": "string",
      "title": "The Name Schema ",
      "minLength": 1
    },
    "theme": {
      "type": "string",
      "title": "The Theme Schema ",
      "minLength": 1
    }
  },
  "additionalProperties": false
}