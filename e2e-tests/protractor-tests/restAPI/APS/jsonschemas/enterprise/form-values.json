{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "form-values.json",
  "type": "array",
  "description": "Form fields values description",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "title": "The Id Schema ",
        "pattern": "[0-9]",
        "minLength": 1
      },
      "name": {
        "type": "string",
        "title": "The Name Schema ",
        "minLength": 1,
        "pattern": "^[a-zA-Z0-9]+"
      }
    }
  }
}