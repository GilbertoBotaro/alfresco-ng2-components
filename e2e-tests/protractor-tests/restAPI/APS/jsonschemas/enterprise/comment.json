{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "comment.json",
  "title": "Comment details",
  "description": "Comment details schema",
  "type": "object",
  "properties": {
    "id": {
      "description": "comment id",
      "type": "integer",
      "minimum": 1
    },
    "message": {
      "description":"comment body",
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-zA-Z0-9]"
    },
    "created": {
      "$ref": "date.json"
    },
    "createdBy": {
      "$ref": "createdBy.json"
    }
  },
  "additionalProperties": false
}